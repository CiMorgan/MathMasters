@model MathMasters.Models.CreateTutor

@{
    ViewBag.Title = "Create";
}

<h2>Add a new tutor</h2>
<div style="display:flex">
    <div class="sidebar" style="background-color: lightgray; align-content:center; padding: 10px; width:30%; position: 0; justify-content:center">
        <img src="~/Images/TutorMale.jpg" alt="Male Tutor" width="200" height: auto; style="display: block; margin-left: auto; margin-right: auto; padding-top:10px">
        <h4 style="text-align:center; padding-top: 5px; padding-bottom: 10px">Our Tutors are skilled educators and are dedicated to helping students learn mathematics, build their confidence, and reach their goals.</h4>
        <ul>
            <li>75% have advanced degrees in mathematics or physical sciences</li>
            <li>Specialist in elementary and secendary mathematics</li>
            <li>All tutors must pass a rigorous screening process to ensure each has a strong foundation in mathematics AND can translate complex concepts to students in a relatable way </li>
        </ul>
        <img src="~/Images/Einstein.jpg" alt="Einstein" width="200" height: auto; style="display: block; margin-left: auto; margin-right: auto; padding-top:10px">
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="padding-left: 10px">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TutorFirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TutorFirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TutorFirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TutorLastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TutorLastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TutorLastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TutorLocation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.TutorLocation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TutorLocation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
