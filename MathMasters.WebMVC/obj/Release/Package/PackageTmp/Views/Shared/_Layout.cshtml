<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        @@-webkit-keyframes tickertape {
            from {
                margin-left: 100%;
                width: 300%;
            }

            to {
                margin-left: 5%;
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container" style="background-image: url(../Images/Banner.jpg);
             background-repeat: round;
             height: 150px;
             position: relative;">
            <div class="navbar-header" style="display: block; float:left; font-size: large;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <style type="text/css">
                    .actionlink {
                        font-size: xx-large;
                        color: white;
                    }
                </style>
                @Html.ActionLink("Math Masters Tutoring Center", "Index", "Home", new { area = "" }, new { @class = "actionlink" })
            </div>
            <div class="navbar-collapse.collapse.show">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Students", "Index", "Student")</li>
                        <li>@Html.ActionLink("Tutors", "Index", "Tutor")</li>
                        <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                        <li>@Html.ActionLink("Schedules", "Index", "Schedule")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div style="animation-duration: 10s; animation-name: tickertape">
        <h4 style="color: red">Warning - Not a real site. This App was created for a school project!!!</h4>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -- Math Masters Tutoring Center -- CiMo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
